@page
@model AddProductModel
@{
}

<div class="container">
    <h1>Add Products</h1>


    <form method="post" asp-page-handler="AddProduct" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Addproduct.ProductName" class="control-label">Product Name :</label>
            <input asp-for="Addproduct.ProductName" class="form-control" />
            <span asp-validation-for="Addproduct.ProductName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Addproduct.ProductPrice" class="control-label">Product Price</label>
            <input asp-for="Addproduct.ProductPrice" class="form-control" />
            <span asp-validation-for="Addproduct.ProductPrice" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Addproduct.ProductCategory" class="control-label">Product Category:</label>
            <input asp-for="Addproduct.ProductCategory" class="form-control" />
            <span asp-validation-for="Addproduct.ProductCategory" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Addproduct.Manufacturer" class="control-label">Product Manufacturer:</label>
            <input asp-for="Addproduct.Manufacturer" class="form-control" />
            <span asp-validation-for="Addproduct.Manufacturer" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Addproduct.ProductDescription" class="control-label">Product Description:</label>
            <input asp-for="Addproduct.ProductDescription" class="form-control" />
            <span asp-validation-for="Addproduct.ProductDescription" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Addproduct.ProductQuantity" class="control-label">Product Quantity</label>
            <input asp-for="Addproduct.ProductQuantity" class="form-control" />
            <span asp-validation-for="Addproduct.ProductQuantity" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Addproduct.ProductImg" class="control-label">Product Image</label>
            <input type="file" asp-for="Addproduct.ProductImg" class="form-control" />
            <span asp-validation-for="Addproduct.ProductImg" class="text-danger"></span>
        </div>

        <button class="btn btn-primary mt-4">Add Product</button>
    </form>

</div>
