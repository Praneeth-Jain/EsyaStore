    @{
        if (TempData["LoginError"] != null)
        {
            <p class="bg-danger text-light m-4 text-center">@TempData["LoginError"]</p>
        }
    }
    <form method="post">
        <div class="form-group">
            <label asp-for="seller.Username" class="control-label">UserName</label>
            <input type="text" asp-for="seller.Username" class="form-control" placeholder="Enter the username" />
            <span asp-validation-for="seller.Username" class="bg-danger text-light"></span>
        </div>
        <div class="form-group">
            <label asp-for="seller.Password" class="control-label"></label>
            <input type="password" asp-for="seller.Password" class="form-control" placeholder="Password" />
            <span asp-validation-for="seller.Password" class="bg-danger text-light"></span>
        </div>
        @* <div class="form-group">
        @Html.Label("terms","Terms & Conditions");
        @Html.CheckBox("terms",false,new{@class="form-check-control"});
        </div> *@
        <button class="btn btn-primary mt-4">SignUp</button>
        <a class="btn btn-primary mt-3" asp-page="/Seller/SellerRegister">Register</a> 
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

