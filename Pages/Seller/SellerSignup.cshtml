@page
@model EsyaStore.Pages.SellerSignupModel
@{
    ViewData["Title"] = "Seller_SignUp";
    Layout = "_LoginLayout";
}

<div class="container" style="max-width: 600px; margin-top: 40px; background-color: #f8f9fa; padding: 30px; border-radius: 8px; box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);">
    <h2 class="text-center" style="color: #007bff; font-weight: bold;">Seller Login</h2>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))

    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }

    <form method="post">
        <div class="form-group mb-3">
            <label asp-for="seller.Username" class="control-label" style="font-weight: bold; color: #333;">UserName</label>
            <input type="text" asp-for="seller.Username" class="form-control" placeholder="Enter your username" style="border-radius: 5px; border: 1px solid #007bff;" />
            <span asp-validation-for="seller.Username" class="bg-danger text-light"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="seller.Password" class="control-label" style="font-weight: bold; color: #333;"></label>
            <input type="password" asp-for="seller.Password" class="form-control" placeholder="Enter your password" style="border-radius: 5px; border: 1px solid #007bff;" />
            <span asp-validation-for="seller.Password" class="bg-danger text-light"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100" style="padding: 10px 15px; font-size: 16px; border-radius: 5px; background-color: #007bff; border: none;">Login</button>

        <div class="text-center mt-3">
            <a class="btn btn-outline-primary mt-3" asp-page="/Seller/SellerRegister" style="border-radius: 5px; color: #007bff; text-decoration: none;">Register</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
