@page
@model EsyaStore.Pages.Seller.SellerProductsModel
@{
}

<div class="container-fluid">
    <div class="container">
        <div class="row">
            @{
                foreach (var prods in Model.Products)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card product-card">

                            <span class="btn-danger">
                                <a class="text-decoration-none text-light" asp-route-id="PId" asp-page-handler="DeleteProduct" asp-page="/Product/Index">X</a>
                            </span>

                            <img src="~/uploads/@prods.ProdImgUrl" class="card-img-top" alt="@prods.ProductName" />

                            <div class="card-body">
                                <h5 class="card-title">@prods.ProductName</h5>
                                <p class="card-text">&#8377; @prods.ProductPrice</p>
                                <a class="btn btn-primary text-decoration-none text-light" asp-route-id="@prods.Id" asp-page="/Seller/EditProduct">Edit</a>
                                <a class="btn btn-primary text-decoration-none text-light" asp-route-id="@prods.Id" asp-page="/Seller/Reviews">Reviews</a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>
