@page
@model EsyaStore.Pages.User.registerModel
@{
}

<div>
    <h1>Register Page</h1>
</div>


<form method="post">
    <div class="form-group">
        <label class="control-label" asp-for="reg.Name">Name</label>
        <input class="form-control" asp-for="reg.Name" />
        <span asp-validation-for="reg.Name" class="bg-danger text-light"></span>
    </div>
    
    <div class="form-group">
        <label class="control-label" asp-for="reg.Email">Email</label>
        <input class="form-control" asp-for="reg.Email" />
        <span asp-validation-for="reg.Email" class="bg-danger text-light"></span>
    </div>
    
   
    <div class="form-group">
        <label class="control-label" asp-for="reg.Password">Password</label>
        <input class="form-control" asp-for="reg.Password" />
        <span asp-validation-for="reg.Password" class="bg-danger text-light"></span>
    </div>

    <div class="form-group">
        <label class="control-label" asp-for="reg.Confirmpassword">Confirm Password</label>
        <input class="form-control" asp-for="reg.Confirmpassword" />
        <span asp-validation-for="reg.Confirmpassword" class="bg-danger text-light"></span>
    </div>

    <div class="form-group">
        <label class="control-label" asp-for="reg.Contact">Contact</label>
        <input class="form-control" asp-for="reg.Contact" />
        <span asp-validation-for="reg.Contact" class="bg-danger text-light"></span>
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
</form>
