@page
@model EsyaStore.Pages.User.registerModel
@{
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0" style="background-color: #f8f9fa;">
                <div class="card-header text-center" style="background-color: #343a40; color: #ffffff;">
                    <h2>Register</h2>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group mb-3">
                            <label class="form-label fw-bold" asp-for="reg.Name" style="color: #343a40;">Name</label>
                            <input class="form-control" asp-for="reg.Name" placeholder="Enter your name" style="background-color: #ffffff; border-color: #ced4da;" />
                            <span asp-validation-for="reg.Name" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label fw-bold" asp-for="reg.Email" style="color: #343a40;">Email</label>
                            <input class="form-control" asp-for="reg.Email" placeholder="Enter your email" style="background-color: #ffffff; border-color: #ced4da;" />
                            <span asp-validation-for="reg.Email" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label fw-bold" asp-for="reg.Password" style="color: #343a40;">Password</label>
                            <input type="password" class="form-control" asp-for="reg.Password" placeholder="Enter your password" style="background-color: #ffffff; border-color: #ced4da;" />
                            <span asp-validation-for="reg.Password" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label fw-bold" asp-for="reg.Confirmpassword" style="color: #343a40;">Confirm Password</label>
                            <input type="password" class="form-control" asp-for="reg.Confirmpassword" placeholder="Confirm your password" style="background-color: #ffffff; border-color: #ced4da;" />
                            <span asp-validation-for="reg.Confirmpassword" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label class="form-label fw-bold" asp-for="reg.Contact" style="color: #343a40;">Contact</label>
                            <input class="form-control" asp-for="reg.Contact" placeholder="Enter your contact number" style="background-color: #ffffff; border-color: #ced4da;" />
                            <span asp-validation-for="reg.Contact" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-dark btn-lg" style="background-color: #28a745; border-color: #28a745;">Register</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
