@page
@model EsyaStore.Pages.Admin.AdminHomeModel
@{
    ViewData["Title"] = "Dashboard";
}
<section class="admin-dashboard container my-5">
    <h2 class="text-center mb-4 admin-title">Dashboard Statistics</h2>
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card admin-statistic-card shadow-sm animate__animated animate__fadeIn animate__delay-1s">
                <div class="card-body d-flex align-items-center justify-content-evenly">
                    <div class="admin-stat-icon bg-primary text-white p-3 rounded-circle">
                        <i class="fas fa-box"></i>
                    </div>
                    <div class="admin-stat-text ml-4">
                        <h5>Total Orders</h5>
                        <h3>@Model.Count</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card admin-statistic-card shadow-sm animate__animated animate__fadeIn animate__delay-2s">
                <div class="card-body d-flex align-items-center justify-content-evenly">
                    <div class="admin-stat-icon bg-info text-white p-3 rounded-circle">
                        <i class="fas fa-calendar-day"></i>
                    </div>
                    <div class="admin-stat-text ml-4">
                        <h5>Today's Orders</h5>
                        <h3>@Model.DateCount</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card admin-statistic-card shadow-sm animate__animated animate__fadeIn animate__delay-3s">
                <div class="card-body d-flex align-items-center justify-content-evenly">
                    <div class="admin-stat-icon bg-success text-white p-3 rounded-circle">
                        <i class="fas fa-calendar-alt"></i>
                    </div>
                    <div class="admin-stat-text ml-4">
                        <h5>This Month's Orders</h5>
                        <h3>@Model.MonthCount</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Top Selling Products Section -->
    <section class="admin-top-selling my-5">
        <h2 class="text-center mb-4 admin-title">Top Selling Products</h2>
        <div class="row">
            @foreach (var product in Model.TopProducts)
            {
                <div class="col-md-4 mb-4">
                    <div class="card admin-product-card shadow-sm animate__animated animate__fadeInUp">
                        <div class="card-body">
                            <h5 class="admin-product-name">@product.ProductName</h5>
                            <p class="admin-product-sales">Sales Count: @product.SalesCount</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>

    <!-- Top Products in Cart Section -->
    <section class="admin-top-cart my-5">
        <h2 class="text-center mb-4 admin-title">Top Products in Cart</h2>
        <div class="row">
            @foreach (var product in Model.CartProds)
            {
                <div class="col-md-4 mb-4">
                    <div class="card admin-product-card shadow-sm animate__animated animate__fadeInUp">
                        <div class="card-body">
                            <h5 class="admin-product-name">@product.ProductNAme</h5>
                            <p class="admin-product-cart-count">Total Cart Count: @product.Count</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
</section>